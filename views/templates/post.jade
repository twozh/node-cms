  post.title
  post.author.name
  post.category
  post.contentAfterMarked
  post.postDateString
  post.categoryString

extends ../layout/layout

block content 
  .row
    .col-xs-12.col-md-8
      .card
        h2= post.title
        .time
          = post.postDateString
          span.author 作者：
            a(href="/u/" + post.author._id)= post.author.name
          span.category 分类：
            a(href="/c/" + post.category)= post.categoryString  
        .content     
          !=post.contentAfterMarked
