//- renderObj
  posts
    posts[i].urlWithDate
    posts[i].title
    posts[i].postDateString
    posts[i].category
    posts[i].categoryString

extends ../layout/layout

block content
  .row
    .col-xs-12.col-md-8
      if (posts && posts.length)
        each post in posts
          .card
            .title: a(href="/"+post.urlWithDate)= post.title
            .time
              = post.postDateString
              span.author 作者：
                a(href="/u/" + post.author._id)= post.author.name
              span.category 分类：
                a(href="/c/" + post.category)
                  = post.categoryString

block scripts
  script(src="/marked/lib/marked.js")