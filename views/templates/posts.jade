include mixin.jade

mixin addPostCard(post)
  .card
    h3: a(href="/" + post.dateString + "/" + post.url)= post.title
    .time
      +dateFormatOut(post.postTime)
      span.author 作者：
        a(href="/u/" + post.author._id)= post.author.name
      span.category 分类：
        a(href="/c/" + post.category)
          +cateToString(post.category)

extends ../layout/layout

block content
  .row
    .col-xs-12.col-md-8
      if (posts && posts.length)
        each post in posts
          +addPostCard(post)

block scripts
  script(src="/marked/lib/marked.js")